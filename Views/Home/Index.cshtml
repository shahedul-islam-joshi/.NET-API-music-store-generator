<div class="toolbar">
    <div class="control-group">
        <label>Region:</label>
        <select id="languageSelect">
            <option value="en-US">USA (English)</option>
            <option value="uk-UA">Ukraine (Ukrainian)</option>
        </select>
    </div>

    <div class="control-group">
        <label>Seed:</label>
        <input type="number" id="seedInput" value="12345">
        <button id="shuffleBtn" class="btn btn-light">Randomize</button>
    </div>

    <div class="control-group">
        <label>Avg Likes:</label>
        <input type="range" id="likesSlider" min="0" max="10" step="0.1" value="0">
        <span id="likesValue">0</span>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Song Title</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Likes</th>
        </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
</table>