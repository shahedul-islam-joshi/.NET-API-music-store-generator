<div class="toolbar">
    <div class="control-group">
        <label>Language:</label>
        <select id="languageSelect">
            <option value="en-US">English (US)</option>
            <option value="uk-UA">Ukrainian</option>
        </select>
    </div>

    <div class="control-group">
        <label>Seed:</label>
        <input type="number" id="seedInput" value="58933423">
        <button id="shuffleBtn">🔀</button>
    </div>

    <div class="control-group">
        <label>Avg Likes:</label>
        <input type="range" id="likesSlider" min="0" max="10" step="0.1" value="0">
        <span id="likesValue">0</span>
    </div>
</div>

<main>
    <table id="musicTable">
        <thead>
            <tr id="tableHeader">
                <th>#</th>
                <th>Song</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody id="tableBody">
        </tbody>
    </table>
</main>